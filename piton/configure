#!/bin/bash
RVB_ROOT=$( dirname $(readlink -f ${BASH_SOURCE[0]}) )


if [ x$1 != x ]; then
   echo Reconfiguring the suite to use $1
   if [ -f $1 ]; then
      rm -f Makefile.in
      ln -s $1 Makefile.in
   else
      echo Error: configure file does not exists!!! Using pre-defined.
   fi
fi

echo Root directory: $RVB_ROOT

SCRIPT_NAME=$( readlink -f ${RVB_ROOT}/Makefile.in )
SCRIPT_FILE=$( readlink -f ${RVB_ROOT}/Makefile.in )".sh"

CONFIG_NAME=$( basename ${SCRIPT_NAME} )

echo Accelerator environment  profile\'s set to $CONFIG_NAME

