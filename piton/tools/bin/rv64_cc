# Description: compilation script for rv64 targets

# Todo: upgrade from IMAC -> IMACFD when FP is available
riscv64-unknown-elf-gcc -march=rv64imac -mabi=lp64 -static -mcmodel=medany                               \
                        -fvisibility=hidden -nostartfiles                                                \
                        -I${DV_ROOT}/verif/diag/assembly/include/riscv/ariane                            \
                        -T${DV_ROOT}/verif/diag/assembly/include/riscv/ariane/link.ld                    \
                        $1 ${DV_ROOT}/verif/diag/assembly/include/riscv/ariane/text_init.S -o diag.exe
